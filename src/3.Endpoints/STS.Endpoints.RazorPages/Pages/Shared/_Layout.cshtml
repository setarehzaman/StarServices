    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="/UserTemplate/css/bootstrap.min.css">
    <link rel="stylesheet" href="/UserTemplate/css/all.min.css">
    <link rel="stylesheet" href="/UserTemplate/css/animate.css">
    <link rel="stylesheet" href="/UserTemplate/css/nice-select.css">
