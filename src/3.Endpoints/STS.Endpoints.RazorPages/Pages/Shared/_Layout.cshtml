    <script src="/UserTemplate/js/yscountdown.min.js"></script>
    <script src="/UserTemplate/js/jquery-ui.min.js"></script>
    <script src="/UserTemplate/js/main.js"></script>

    <script src="~/UserTemplate/select2/dist/js/select2.full.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>


