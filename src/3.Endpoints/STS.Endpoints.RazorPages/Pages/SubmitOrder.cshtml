@page
@model STS.Endpoints.RazorPages.Pages.SubmitOrderModel
@{
}
<!--============= Account Section Starts Here =============-->
<section style="padding-top:150px;" class="upcoming-auction padding-bottom">
    <div class="container">
        <div class="account-wrapper mt--100 mt-lg--440">
            <div class="left-side">
                <div class="section-header">
                    <h2 class="title">فرم ثبت سفارش</h2>
                </div>
                <form method="post" enctype="multipart/form-data" class="login-form">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <input type="hidden" asp-for="Input.TaskId" value="@Model.TaskItem.Id">

                    <div class="form-group mb-30">
                        <label for="login-email"><i class="far fa-envelope"></i></label>
                        <input type="text" asp-for="Input.OrderedPrice" placeholder="قیمت پیشنهادی">
                    </div>

                    <div class="form-group mb-30">
                        <label for="login-email"><i class="far fa-envelope"></i></label>
                        <input data-jdp-only-date data-jdp type="text" asp-for="Input.ShamsiDoAt" placeholder="تاریخ انجام">
                    </div>

                    <div class="form-group mb-30">
                        <label for="login-email"><i class="far fa-envelope"></i></label>
                        <input type="text" asp-for="Input.Description" placeholder="توضیحات">
                    </div>

                    <div class="form-group mb-30">
                        <label for="login-email"><i class="far fa-envelope"></i></label>
                        <input type="file" asp-for="Input.Images" placeholder="تصاویر" multiple>
                    </div>

                    <div class="form-group mb-0">
                        <button type="submit" class="custom-button">ثبت درخواست</button>
                    </div>
                </form>
            </div>
            <div class="right-side cl-white" style="background-image: url('@Model.TaskItem.ImgPath'); background-size: cover; background-position: center; position: relative;">
                <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.5); border-radius: 10px;"></div>
                <div class="section-header mb-0" style="position: relative; z-index: 1;">
                    <h6 class="title mt-0" style="color: white;">درخواست سرویس</h6>
                    <h4 style="color: white;">@Model.TaskItem.Name</h4>
                </div>
            </div>
        </div>
    </div>
</section>
<!--============= Account Section Ends Here =============-->
@section Scripts
{

    <script type="text/javascript" src="UserTemplate/JalaliCalender/jalalidatepicker.min.js"></script>

    <script>
        jalaliDatepicker.startWatch({
            minDate: "attr",
            maxDate: "attr",
            time:true
        });
    </script>
}
