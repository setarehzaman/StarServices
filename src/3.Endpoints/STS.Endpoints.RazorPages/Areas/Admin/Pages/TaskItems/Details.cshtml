@page
@model STS.Endpoints.RazorPages.Areas.Admin.Pages.TaskItems.DetailsModel
@{
    ViewData["Title"] = "استارسرویس > مدیریت سرویس ها > جزییات سرویس ";
}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    جزییات سرویس
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" role="form" method="post">
                    <input type="hidden" asp-for="TaskItem.Id"></input>
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="TaskItem.Name" class="form-control" type="text" placeholder="نام" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="TaskItem.BasePrice" class="form-control" type="text" placeholder="قیمت پایه" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="TaskItem.SubCategoryName" class="form-control" type="text" placeholder="دسته بندی" disabled />
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->