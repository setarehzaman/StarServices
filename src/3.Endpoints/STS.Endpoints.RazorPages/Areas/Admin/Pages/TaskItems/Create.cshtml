@page
@using STS.Domain.Core.Contracts.AppService
@model STS.Endpoints.RazorPages.Areas.Admin.Pages.TaskItems.CreateModel
@inject ISubCategoryAppService subCategoryAppService
@{
    ViewData["Title"] = "استارسرویس > مدیریت سرویس ها > ایجاد سرویس جدید";

}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fill fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <i class="icon-check"></i>
        <strong>تبریک!</strong>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger fill fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <i class="icon-close"></i>
        <strong>خطا!</strong>
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    افزودن سرویس
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="InputModel.Name" class="form-control" type="text" placeholder="نام سرویس" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="InputModel.BasePrice" class="form-control" type="text" placeholder="قیمت پایه">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="InputModel.SubCategoryId" class="form-select">
                                    @foreach (var subCategory in Model.SubCategories)
                                    {
                                        <option value="@subCategory.Id">@subCategory.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group relative">
                            <input asp-for="InputModel.TaskItemImg" type="file" class="form-control">                       
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->