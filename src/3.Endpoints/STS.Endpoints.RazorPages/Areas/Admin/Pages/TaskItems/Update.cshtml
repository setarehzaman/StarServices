@page
@using STS.Domain.Core.Contracts.AppService
@model STS.Endpoints.RazorPages.Areas.Admin.Pages.TaskItems.UpdateModel
@{
    ViewData["Title"] = "استارسرویس > مدیریت سرویس ها > ویرایش سرویس ها";
}

<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    ویرایش سرویس ها
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" role="form" method="post">
                    <input type="hidden" asp-for="TaskItem.Id"></input>
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="TaskItem.Name" class="form-control" type="text" placeholder="نام" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="TaskItem.BasePrice" class="form-control" type="text" placeholder="قیمت پایه" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="TaskItem.SubCategoryId" class="form-select">
                                    @foreach (var subCategory in Model.SubCategories)
                                    {
                                        <option value="@subCategory.Id">@subCategory.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group relative">
                            <input asp-for="TaskItem.TaskItemImg" type="file" class="form-control"> <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple">
                                            <div class="paper-ripple__background"></div>
                                            <div class="paper-ripple__waves"></div>
                                        </div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->