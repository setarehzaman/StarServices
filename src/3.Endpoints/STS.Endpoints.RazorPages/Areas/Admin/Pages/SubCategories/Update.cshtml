@page
@using STS.Domain.Core.Contracts.AppService
@model STS.Endpoints.RazorPages.Areas.Admin.Pages.SubCategories.UpdateModel
@inject IMainCategoryAppService mainCategoryAppService
@{
    ViewData["Title"] = "استارسرویس > مدیریت زیر دسته بندی ها > ویرایش زیر دسته بندی ها";
}

<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    ویرایش زیر دسته بندی
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" role="form" method="post">
                    <input type="hidden" asp-for="SubCategory.Id"></input>
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="SubCategory.Name" class="form-control" type="text" placeholder="نام" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="SubCategory.MainCategoryId" class="form-select">
                                    @foreach (var subCategory in @Model.MainCategories)
                                    {
                                        <option value="@subCategory.Id">@subCategory.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->

