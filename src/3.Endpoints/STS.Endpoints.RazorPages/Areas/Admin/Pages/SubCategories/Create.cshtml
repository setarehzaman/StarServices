@page
@using STS.Domain.Core.Contracts.AppService
@model STS.Endpoints.RazorPages.Areas.Admin.Pages.SubCategories.CreateModel
@{
    ViewData["Title"] = "استارسرویس > مدیریت زیر دسته بندی ها > ایجاد زیر دسته بندی جدید";

}

<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fill fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <i class="icon-check"></i>
        <strong>تبریک!</strong>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger fill fade show">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <i class="icon-close"></i>
        <strong>خطا!</strong>
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    افزودن زیر دسته بندی
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="InputModel.Name" class="form-control" type="text" placeholder="نام" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="InputModel.MainCategoryId" class="form-select">
                                    @foreach (var subCategory in @Model.MainCategories)
                                    {
                                        <option value="@subCategory.Id">@subCategory.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->