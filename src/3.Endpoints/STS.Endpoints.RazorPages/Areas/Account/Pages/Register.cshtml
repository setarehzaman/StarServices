@page
@using STS.Domain.Core.Contracts.AppService
@model STS.Endpoints.RazorPages.Areas.Account.Pages.RegisterModel
@{
    Layout = "../Shared/_Layout";
    ViewData["Title"] = "ثبت نام کاربر";
    var cities = await _baseDataAppService.GetAllCities(default);
}
@inject IBaseDataAppService _baseDataAppService;

<!--============= Account Section Starts Here =============-->
<section style="padding-top:100px;" class="account-section padding-bottom">
    <div class="container">
        <div class="account-wrapper mt--100 mt-lg--440">
            <div class="left-side">
                <div class="section-header">
                    <h2 class="title">ثبت نام</h2>
                    <p>خوشحالیم که اینجا هستید!</p>
                </div>
                <form method="post" class="login-form">
                    <div class="form-group mb-30">
                        <label for="login-email"><i class="far fa-envelope"></i></label>
                            <input asp-for=Input.Email type="text" id="login-email" placeholder="آدرس ایمیل" required="">
                    </div>
                    <div class="form-group mb-30">
                        <label for="login-pass"><i class="fas fa-lock"></i></label>
                            <input asp-for=Input.Password type="password" id="login-pass" placeholder="کلمه عبور" required="">
                        <span class="pass-type"><i class="fas fa-eye"></i></span>
                    </div>
                    <div class="form-group mb-30">
                        <label for="login-repass"><i class="fas fa-lock"></i></label>
                            <input asp-for=Input.RePassword type="password" id="login-pass" placeholder="تکرار کلمه عبور" required="">
                        <span class="pass-type"><i class="fas fa-eye"></i></span>
                    </div>
                    <div class="form-group mb-30">
                        <div class="input-group">
                            <select asp-for="Input.RoleId" class="form-select">
                                <option value="3">کارشناس</option>
                                <option value="2">مشتری</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-30">
                        <div class="input-group">
                            <select asp-for="Input.CityId" class="form-select">
                                @foreach (var city in cities.Data!)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <button type="submit" class="custom-button">ثبت نام</button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                </form>
            </div>
            <div class="right-side cl-white">
                <div class="section-header mb-0">
                    <h3 class="title mt-0">حساب کاربری دارید؟</h3>
                    <p>وارد سیستم شوید و به داشبورد خود بروید.</p>
                    <a asp-page="Login" class="custom-button transparent">ورود</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--============= Account Section Ends Here =============-->